---
import Layout from '../layouts/Layout.astro';
import Counter from '../components/Counter.astro';
import Ceremony from '../components/Ceremony.astro';
import Reception from '../components/Reception.astro';
import Confirm from '../components/Confirm.astro';
import DressCode from '../components/DressCode.astro';
import Gifts from '../components/Gifts.astro';
import Carousel from '../components/Carousel.astro';
---

<Layout title="Boda Marco y Kei">
	<main class="py-12">
		<section class="px-12 py-4">
			<p class="text-2xl sm:text-5xl">Lo mejor de los viajes es la buena compañía, 
				por eso queremos que estén con nosotros en el comienzo de nuestra mayor aventura.</p>
		</section>
		<Counter />
		<Ceremony />
		<Reception />
		<Confirm />
		<DressCode />
		<Gifts />
		<Carousel />
	</main>
</Layout>
